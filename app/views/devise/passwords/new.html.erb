<%= content_for :title, t('devise.passwords.new') %>
<div class="authform">
  <%= simple_form_for resource, :as => resource_name, :url => password_path(resource_name) do |f| %>
    <p class="help-block">We will send password reset instructions.</p>
    <%= f.error_notification %>

    <div class="form-inputs">
      <%= f.input :email %>
    </div>

    <div class="form-actions">
      <%= f.button :submit, t('actions.submit') %>
    </div>
  <% end %>
</div>
