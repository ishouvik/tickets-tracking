<%= content_for :title, t('devise.registrations.new') %>

<div class="authform">
  <%= simple_form_for resource, as: resource_name, url: registration_path(resource_name) do |f| %>
    <%= f.error_notification %>

    <div class="row">
      <div class="col-md-6">
        <div class="form-group">
          <%= f.input :name, :autofocus => true, class: 'form-control' %>
        </div>
      </div>

      <div class="col-md-6">
        <div class="form-group">
          <%= f.input :email, class: 'form-control' %>
        </div>
      </div>
    </div>

    <div class="row">
      <div class="col-md-6">
        <div class="form-group">
          <%= f.input :password, class: 'form-control' %>
        </div>
      </div>

      <div class="col-md-6">
        <div class="form-group">
          <%= f.input :password_confirmation, class: 'form-control' %>
        </div>
      </div>
    </div>

     <%= f.button :submit, 'Sign up', :class => 'button right' %>
  <% end %>
</div>
