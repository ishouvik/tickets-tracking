<% unless current_user.nil? %>
  <%= link_to t('ticket_items.index'),       main_app.ticket_items_path, class: 'ui item' %>
  <%= link_to 'Edit account',                main_app.edit_user_registration_path, class: 'ui item' %>
  <%= link_to 'Sign out',                    main_app.destroy_user_session_path, :method=>'delete', class: 'ui item' %>
  <%= link_to t('admin_dashboard.index'),    main_app.admin_dashboard_path, class: 'ui item' if (current_user.has_role? :admin) %>
<% else %>
  <%= link_to 'Sign in',                     main_app.new_user_session_path, class: 'ui item' %>
  <%= link_to t('devise.registrations.new'), main_app.new_user_registration_path, class: 'ui item' %>
<% end %>
