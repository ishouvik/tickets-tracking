<% if user_signed_in? %>
  <%= link_to 'Edit account', edit_user_registration_path, class: 'ui item' %>
  <%= link_to 'Sign out', destroy_user_session_path, :method=>'delete', class: 'ui item' %>
  <%= link_to t('admin_dashboard.index'), admin_dashboard_path, class: 'ui item' if (current_user.has_role? :admin) %>
<% else %>
  <%= link_to 'Sign in', new_user_session_path, class: 'ui item' %>
  <%= link_to t('devise.registrations.new'), new_user_registration_path, class: 'ui item' %>
<% end %>
